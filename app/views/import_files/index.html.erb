
<h1>Faça o upload do arquivo em formato CNAB</h1>

<div class="container">
  <%= form_for @import_file, html: { id: 'import-file' } do |f| %>
    <%=f.label :file, 'Informe o arquivo CNAB'%>
    <%= f.file_field :file, required: true %>
    <%= f.submit "Salvar dados "%>
  <% end %>
</div>
<% if flash && flash[:success] %>
<h3><%=flash[:success] %></h3>
<% end %>
<% if @import_files.empty? %>
<h3>Nenhuma importação realizada</h3>
<% else %>
  <div class="import-description">
    <% @import_files.each do |import_file| %>
      Descrição da importação: <%= import_file.name %><br />
      Número de linhas importadas: <%= import_file.import_file_lines.count %>
      <hr />
    <% end %>
  </div>
<% end %>

